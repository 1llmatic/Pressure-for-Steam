"resource/layout/gamespage_details_subheader_labels.layout" {
	styles {
		headertext {
			textcolor=lightestGrey
			font-size=15
		}

		headertext-red {
			textcolor=lightestGrey
			font-size=15
		}

		headertext-green {
			textcolor=lightestGrey
			font-size=15
		}

		headertext-blue {
			textcolor=lightestGrey
			font-size=15
		}

		valuetext {
			textcolor=lightestGrey
			font-size=15
		}
	}


	layout {
		region { 
			name="subheaderlabels" 
			align=left 
			x=0
			y=0
		}

		place { 
			control=totalplaytimeheader
			region=subheaderlabels
			x=0
			y=0
		}
		
		place {
			control=totalplaytimevalue
			start=totalplaytimeheader
			x=6
			dir=right
		}
		
		place { 
			control=gameplayedheader
			start=totalplaytimeheader
			dir=down
		}
		
		place {
			control=gameplayedvalue
			start=gameplayedheader
			dir=right
			x=6
		}
		
		place {
			control=streamheader
			start=gameplayedheader
			dir=down
		}
		
		place {
			control=streamvalue
			start=streamheader
			x=6
			dir=right
		}
	}
}