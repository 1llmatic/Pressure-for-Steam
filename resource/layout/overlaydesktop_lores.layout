"resource/layout/overlaydesktop_lores.layout" {
	styles {
		sidemenu {
			textcolor=blue
			font-size=15
		}
		
			sidemenu:hover {
				textcolor=lightestBlue
				font-size=15
			}

		topbar {
			textcolor=white
			font-family=headerfont
			font-size=48
		}

		clocksuffix {
			textcolor=white
			font-family=headerfont
			font-size=48
		}

		timeStrings {
			color=white
		}
	}
	
	layout {
		region {
			name=overlay
			align=top-center
			width=1000
			margin-left=10
			margin-top=10
			margin-right=10
			margin-bottom=10
		}
	
		region {
			name="detailpanels"
			region=overlay
			align=bottom
			width=max
			height=210
			margin-bottom=100
		}

		region {
			name="taskbar"
			region=overlay
			align=bottom
			width="max"
			height=75
		}

		region {
			name="topbar"
			region=overlay
			width="max"
			height=50
		}
	
		place {
			controls="BroadcastDetailPanel"
			region=detailpanels
			width=330
			height=240
			spacing=10
		}

		place {
			controls="GameHubButton,GameGroupsButton,ChatRoomButton,DLCButton,GuideButton,GuidesButton,LegacyCDKeyButton,WebSiteButton,ForumsButton,RecommendButton,WorkshopButton,FriendsButton,PlayersButton,AchievementsButton,ScreenshotsButton"
			region=overlay
			align=left
			y=100
			dir=down
			spacing=10
		}
		
		
		place { 
			control=clock,clocksuffix 
			region=topbar
			align=top-center
			y=6
		}
		
		place { 
			control="SessionText,TwoWeeksText,ForeverText" 
			y=45
			x=10
			dir=down
		}
		
		place {
			control="CloseButton"
			region=overlay
			y=35
			dir=down
		}
	}	
}