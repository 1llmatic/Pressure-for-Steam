"resource/layout/gamespage_details_subheader.layout" {
	controls {
		subheaderlabels { 
			controlname="CDetailsSubHeaderLabelsPanel" 
			zpos=100
		}
		launchbutton { controlname="Button" labeltext="#Steam_LaunchGame" style="detailsLaunchButton" tabposition=1 command="RunGameAction" }
		clientlist { controlname="ClientListButton" labeltext="" style="ClientListButton" tabposition=2 zpos=100 }
	}

	colors {
		GameDetailsSubHeader.HorizontalSpacing=0
		GameDetailsSubHeader.VerticalMargin=0
		
		playButtonBorderTop="206 248 90 255"
		playButtonBorderTop2="172 217 72"
		playButtonBorderTopCorners="192 232 84 255"
		playButtonTopCorners="118 142 51 255"
		playButtonBottomCorners="78 98 31 255"
		
	}

	styles {
		CDetailsGameSubHeaderPanel {
			bgcolor=orange
		}
		
		
		ClientListButton {
			inset="0 0 0 0"
			// minimum-width=20
			// minimum-height set by code to match actual height of Launch button
			// Do not set either minimum-width or -height here or it will override the code and the layout will break
			bgcolor=none

			render_bg {
				// background fill
				0="gradient( x0 , y0, x1, y1, buttonface2, almostblack )"
			}
		}
		
		ClientListButton:hover {
			inset="-6 0 0 0"
			bgcolor=none

			render_bg {
				// background fill
				0="gradient( x0 , y0, x1, y1, buttonface2, almostblack )"
			}
		}	
		

		DetailsButton {   
			inset="-3 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="Text"
			font-style=uppercase
			bgcolor=none

			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		DetailsButton:hover {
			inset="-3 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none
			
			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		DetailsButton:active {
			inset="-3 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="White"
			font-style=uppercase
			bgcolor=none
			
			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, DialogBG, propertysheetbg )"
			}	
		}
		
		DetailsLaunchButton {   
			inset="25 7 0 0"
			font-family=headerfont
			font-size=30
			
			font-style="outerglow"
			font-outerglow-color="darkestGreen"
			font-outerglow-offset=1
			font-outerglow-filtersize=3
			
			textcolor=white
			
			minimum-height=42

			render {
				1="image( x0 + 12, y0 + 10, x1, y1, graphics/gamedetails/play/play_icon )"
			}
			render_bg {
				
				0="gradient(x0, y0, x1, y1, lightestGreen, green)"				
			}	
		}
	
		DetailsLaunchButton:Hover {   
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none   

			render {
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_play_hover )"
			}
			render_bg
			{
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		DetailsLaunchButton:Selected {
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none  
			render {
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_play_down )"
			}
			render_bg {
        // background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}
		}
		
		
		DetailsLaunchButton:Active {
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="White"
			font-style=uppercase
			bgcolor=none  
			render {
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_play_down )"
			}
			
			render_bg {
        // background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
				
		DetailsInstallButton {  
			
			inset="25 7 0 0"
			font-family=headerfont
			font-size=30
			
			font-style="outerglow"
			font-outerglow-color="darkestGreen"
			font-outerglow-offset=1
			font-outerglow-filtersize=3
			
			textcolor=white
			
			minimum-height=42

			render {
				1="image( x0 + 12, y0 + 10, x1, y1, graphics/gamedetails/play/play_icon )"
			}
			render_bg {
				0="gradient(x0, y0, x1, y1, lightestGreen, green)"
			}	
		}
		
		DetailsInstallButton:Hover {  
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none   

			render {
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_install_hover )"
			}
			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		DetailsInstallButton:Selected {
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none   
			
			render {
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_install_down )"
			}
			render_bg {
                // background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}
		}
		
		
		DetailsInstallButton:Active {
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="white"
			font-style=uppercase
			bgcolor=none  
			render
			{
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_install_down )"
			}
			
			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		
		DetailsBuyButton {   
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="Text"
			font-style=uppercase
			bgcolor=none

			render
			{
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_buy )"
			}
			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		DetailsBuyButton:hover {   
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none   

			render
			{
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_buy_hover )"
			}
			render_bg {
				// background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		DetailsBuyButton:active {
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="White"
			font-style=uppercase
			bgcolor=none  
			render
			{
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_buy_down )"
			}
			
			render_bg {
         // background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
			}	
		}
		
		
		DetailsBuyButton:Selected {
			inset="23 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="TextHover"
			font-style=uppercase
			bgcolor=none  
			render
			{
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_buy_down )"
			}
			render_bg {     
        // background fill
				0="gradient( x0, y0, x1, y1, buttonface2, almostblack )"
                
			}
		}
	}

	layout {
		// Y offset here should match the vertical padding value above in the colors section
		region { name="header" y=0 x=0 width=500 height=100 }

		place { 
			control=launchbutton
			dir=right
			align=right
			//margin-left=0
			//margin-right=21
			//margin-top=28
			//margin-bottom=0
			spacing=0
			
			height=42
			width=117			

		}
		place { 
			start=launchbutton
			control=clientlist
			region=header
			dir=right
			align=right
			margin-left=0
			margin-right=0
			spacing=0	
		}
		place { 
			control=subheaderlabels
			
			align=right
			
			width=0
			height=0
			
			margin-left=0
			y=30
		}
	}
}
