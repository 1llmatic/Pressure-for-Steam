"resource/layout/toolwindow.layout" {
	controls {
		// the container
		ToolWindowSheet	{	controlname="PropertySheet" }
	} 
	
		
	styles {
	
		ToolWindow {
			render_bg {
			
				// Creates the top section
				0="gradient( x0+1, y0+1, x1-1, y0 + 86, grey, darkGreyEnd )"
				
				1="fill(x0+1, y0+1, x0+2, y0+2, bottomDarkPixels)" // Top Left Dark Pixel
				2="fill(x1-2, y0+1, x1-1, y0+2, bottomDarkPixels)" // Top Right Dark Pixel
				
				3="fill(x0+2, y0+1, x0+3, y0+2, greyHighlightFake)" // Top Left Fake Anti-Aliased
				4="fill(x0+1, y0+2, x0+2, y0+3, greyHighlightFake)" // Top Left Fake Anti-Aliased
				
				5="fill(x1-3, y0+1, x1-2, y0+2, greyHighlightFake)" // Top Right Fake Anti-Aliased
				6="fill(x1-2, y0+2, x1-1, y0+3, greyHighlightFake)" // Top Right Fake Anti-Aliased
				
				// Create the 1px Highlight on top
				7="fill( x0+3, y0+1, x1-3, y0+2, greyHighlight)"
			}
		}
		
	Button
	  {     
	  	textcolor="none"
			bgcolor="none"
			//minimum-width=24
			//minimum-height=24
			render_bg 
			{
				0="image(x0+8,y0+8,x1,y1,graphics/new_tab)"
			}
	  }
	  
	  Button:hover
		{
			render_bg 
			{
				0="image(x0+8,y0+8,x1,y1,graphics/new_tab_hover)"
			}
		}

	  MenuButton
	  {
	  	padding-right=8
			minimum-width=24
			minimum-height=24
		 	bgcolor=none
			render_bg {}
		}
	  
	  TabMenuButtonFlash { 
			render_bg
			{
				0="fill(x0+6,y0+6,x1-6,y1-6,Focus)"
			}
	  }
	  
	  TabMenuItemFlash {
	  	textcolor="orange"
	  }
	  
	  
	  
	  
	  
	  
	  
	  		
	PageTab {
		minimum-height=30
		
		textcolor  = "blue"
		font-family=basefont
		font-size=13
		
		font-style="none"
		
		font-weight=400
		inset  = "0 0 0 0"
        
        bgcolor=red
        
        render_bg {
        
        }
    }

    
    PageTab:selected {
		textcolor  = "red"
		font-family=basefont
		font-size=13
		
	
		
		font-weight=400
		inset  = "0 0 0 0"
		bgcolor  = "none"
	    render_bg {
	    	0="image(x0,y0,x0+3,y0+30,graphics/tabs/active/left)"
	    	1="image_tiled(x0+3,y0,x1-3,y0+30, graphics/tabs/active/inner)"
	    	2="image(x1-3,y0,x1,y0+30, graphics/tabs/active/right)"
	    }
    }

    
 	PageTab:hover
    {
		textcolor  = "green"
		font-family=basefont
		font-size=13
		
		font-weight=400
		inset  = "0 -2 0 0"
		render_bg {}
    }
  
    PageTab:selected:hover
    {
		textcolor  = "orange"
		font-family=basefont
		font-size=13
		
		font-weight=400
		inset  = "0 -2 0 0"
		bgcolor  = "none"
	    render_bg {}
    }
      
  PageTab:Focus
	  {
		textcolor  = "Texthover"
    }	
	  
	  
	  
	}

	layout {
		//Original
		place [!$OSX] { 
			control="frame_minimize,frame_maximize,frame_close" 
			align=right
			width=34 
			height=27 
		}
		
		place [!$OSX] { 
			control="frame_captiongrip" 
			height=40 
			width=max 
		}
		
		place [$OSX] { 
			control="frame_captiongrip" 
			height=50 
			width=max 
		}
		
		place { 
			control="ToolWindowSheet" 
			x=0 
			y=25 
			height=max
			width=max 
			margin-top=-4 
		}
	}
}
