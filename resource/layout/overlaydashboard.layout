"resource/layout/overlaydashboard.layout" {
	controls {}
	
	colors {}
	
	styles {
		topfade {
			render_bg {
				0="fill( x0, y0, x1, y1, black75)"
			}
		}
		
		bottomfade {
			render_bg {
				0="fill( x0, y0, x1, y1, black75)"
			}
		}	
		
		overlaymain {
			render_bg {
				0="fill(x0,y0+112,x1,y1-146, black40)"
			}
		}
		
		hotkey {
			font-size=14
			font-style=none
			textcolor=none
		}

		// The game's name
		topbar {
			font-family=headerfont
			font-size=48			
			textcolor=white
			
			render_bg {
			//	0="fill(x0,y0,x1,y1, red)"
			}
		}
		
		detailsboxtitle {
				textcolor=red
		}
				
		// Close button		
		OverlayURLLabel {
			image=graphics/overlay/close
		}
		
			OverlayURLLabel:hover {
				image=graphics/overlay/close_hover
			}
		
		LabelOverlay {
			image=graphics/overlay/browsersettingsmusic
		}

	}
	
	layout {
		place { 
			control="TopFadePanel"
			align=top
			width=max
			height=112
		}
		
		place {
			control="BottomFadePanel"
			align=bottom
			width=max
			height=146
		}
		
		region {
			name="topbar"
			region=overlay
			width="max"
			height=112
			align=top-center
		}
		
		region {
			name="taskbar"
			region=overlay
			width="max"
			height=146
			align=bottom
		}
		
		place {
			controls="gamename"
			region=topbar
			align=left
			y=8
			x=16
		}

		place {
			control="CloseButton"
			region=topbar
			align=right
			y=36
			margin-right=39 // There is a 3px weirdness offset. This accounts for that.
		}

		// Used for the icons 
		place {
			control=HotkeyExplain
			align=right
			region=taskbar
			dir=right
			margin-right=48 // There is 2 pixels on the left of the image that we need to account for
			y=46
		}
	
		region {
			name=overlay
			width=max
			align=top-center
		}
	
		place {
			control="TaskbarPanel"
			region=taskbar
			height=145
			align=right
			width=480
		}
		
		place {
			control="HotkeyLabel,powermeter,PowerMeterDim"
			height=0
			width=0
		}
	}
}