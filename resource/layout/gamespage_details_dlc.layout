	}

	styles {

		// This overrides the default button.
		button {
			textcolor=blue
			padding=0
			
			render_bg {
				0="image(x1-5, y1-14, x1, y1-10, graphics/details_button)"
			}
		}
			
			button:hover {
				textcolor=lightestBlue
			}

		dlcdetails { 
			bgcolor=black65
		}

		bodycontent {
			selectedtextcolor="Label"
			textcolor="Label"
			font-size=15

			render_bg {}
		}

		"DLC_Uninstalled" {
			selectedtextcolor="label"
			textcolor="labeldisabled"
		}

		"DLC_Installed" {
			selectedtextcolor="white"
			textcolor="text"
		}

		"mostrecenttime" {
			padding-top=3
			minimum-width=256
