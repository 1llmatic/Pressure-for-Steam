"resource/layout/overlay_broadcastpanel.layout" {
	styles {
		Button {
			font-size=15
font-size=14 [$LINUX]
			font-family=basefont
			font-weight=400
			inset=2
		}

		highlight {
			textcolor=white
		}
	}
	
	layout {
		place {
			control="TitleText"
			width=0
			height=0
		}

		place {
			control="InstructionText"
			y=0
		}

		place { 
			control="ShowBroadcast,ShowChat,ShowSettings,StopBroadcast" 
			align=top
			y=20
			margin-bottom=0
			spacing=10 
		}
	}
}