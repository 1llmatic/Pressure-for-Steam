"resource/layout/settingsdialog.layout"
{
	controls
	{
		SettingsDialog { controlname="CDialogSettings" }
		okbutton { controlname="OKButton" }	 
		cancelbutton { controlname="CancelButton" }	 
		settingslist { controlname="SettingsList" style="SettingsList" wide=180 }
		sheet { controlname="Sheet" style="PropertySheet" }

	}
	
	styles
	{
		CDialogSettings
		{
			minimum-width="740"
			minimum-height="585"
			bgcolor=none
			render_bg
			{     

      	 		0="fill( x0, y0, x1, y1, grey)"
			
			1="fill( x0, y0+27, x0+194, y0+32, groupGrey )"
			2="fill( x0+194, y0+27, x1, y0+32, darkestGrey )"
  			
			3="fill( x0, y1-46, x1, y1-45, darkGreyEnd )"
			4="fill( x0, y1-45, x1, y1-44, greyHighlight )"
			5="fill( x0, y1-44, x1, y1, Lightgreyend )"
			6="fill( x0+1, y1-2, x0+2, y1-1, darkGreyEnd )"
			7="fill( x1-2, y1-2, x1-1, y1-1, darkGreyEnd )"
			}

		}
		
		PropertySheet
		{
			minimum-width="535"
			minimum-height="505"
			inset="0 32 0 0"
			bgcolor=none
			render_bg
			{

			}

		}
		"SettingsList"
		{
			inset="-4 -14 4 0" //inset="6 -14 4 0" 
			minimum-width="200"
			minimum-height="525"
			font-size=18
			padding=6
		}
		
		ListPanelInterior
    {     
		inset="3 0 0 0"
		font-size=15
		textcolor="text2"
		bgcolor="none" 
   		 render
			{				
     			//line to hide a bug here
     			1="fill( x0, y0-1, x0+194, y0+5, groupGrey )"
			
      		 	//gradient to obscure content at bottom of scrolling region 
			//2="gradient( x0+1, y1 - 16, x1-1, y1, none, almostblack )"
			}

		render_bg 
			{				
			0="fill( x0, y0, x1, y1, groupGrey)"
			}
    } 
		
		
	}
	layout
	{
		region { name="buttons" width=max height=36 align="bottom" }
		region { name="body" margin-left=0 margin-right=-1 margin-bottom=46 margin-top=-20 }		
		
		
		place [!$OSX]  { 
			control="frame_minimize,frame_close" 
			align=right 
			margin-top=-2 
			margin-right=6 
			spacing=-9 
		}

		place { 
			control="settingslist,sheet"
			region=body 
			width=max 
			height=max 
			spacing=-4  
		}

		place { 
			control="settingslist"
			margin-top=32  
		}

		place { 
			control="sheet" 
			margin-left=194 
			margin-top=0 
		}

		place { 
			control="okbutton,cancelbutton" 
			region="buttons"
		        width=92 
			height=25 
			align=right
			margin-right=10 margin-top=0
			margin-bottom=2 spacing=10 }
	}
}