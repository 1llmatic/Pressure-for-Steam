"resource/layout/gamespage_grid_chrome.layout" {
	controls {
		"chromeborder" {
			ControlName					Panel
			style						ChromeBorderItem
			mouseinputenabled			0
		}
		
		
		"launch" {
			zpos="1"
			// this control's text and command will be clobbered by code based on the installation state
			ControlName					URLLabel
			labelText					"#steam_launch"
			style						CUILaunchButton
			command						launch
		}
		
				
		"divider" {
			zpos="1"
			// 
			ControlName					Label
			labelText					"|"
			style						GridNavDivider

		}
		
		"details" {
			zpos="1"
			ControlName					URLLabel
			labelText					"#steam_details"
			style						CUIDetailsButton
			command						details
		}
	}

	styles {
		ChromeBorderItem {
			
			render {
				// So for some reason we CANNOT use any opacity in this element. :( 
				// I'd love to do a semi-transparent overlay but alas we cannot haz.
				// If we try to use a semi-transparent TGA file, the element appears laggy due to the hard-coded animation Valve has applied.
							
				
				0="gradient(x0+13, y1-46, x1-19, y1-21, grey, lightGreyEnd)"
				
				// Dark Borders around
				1="fill(x0+14, y1-47, x1-19, y1-46, darkestGrey)" // Top
				2="fill(x0+12, y1-45, x0+13, y1-22, darkestGrey)" // Left
				3="fill(x0+14, y1-21, x1-20, y1-20, darkestGrey)" // Bottom
				4="fill(x1-19, y1-45, x1-18, y1-22, darkestGrey)" // Right
				
				// Dark Corner Pixels (Anti-Aliased)
				5="fill(x0+12, y1-46, x0+13, y1-45, darkestGreyFake)" // Top Left
				6="fill(x0+13, y1-47, x0+14, y1-46, darkestGreyFake)" // Top Left
				7="fill(x1-20, y1-47, x1-19, y1-46, darkestGreyFake)" // Top Right
				8="fill(x1-19, y1-46, x1-18, y1-45, darkestGreyFake)" // Top Right
				9="fill(x0+12, y1-22, x0+13, y1-21, darkestGreyFake)" // Bottom Left
				10="fill(x0+13, y1-21, x0+14, y1-20, darkestGreyFake)" // Bottom Left
				11="fill(x1-20, y1-22, x1-19, y1-21, darkestGreyFake)" // Bottom Right
				12="fill(x1-19, y1-22, x1-18, y1-21, darkestGreyFake)" // Bottom Right
				
				// Dark Corner Pixels (Darker Anti Aliased)
				13="fill(x0+13, y1-46, x0+14, y1-45, darkCornerPixels)" // Top Left
				14="fill(x1-20, y1-46, x1-19, y1-45, darkCornerPixels)" // Top Right
				15="fill(x0+13, y1-22, x0+14, y1-21, darkCornerPixels)" // Bottom Left
				16="fill(x1-20, y1-22, x1-19, y1-21, darkCornerPixels)" // Bottom Right
				
				// Bottom Corners (Anti Aliased)
				17="fill(x0+13, y1-23, x0+14, y1-22, bottomDarkPixels)" // Bottom Left
				18="fill(x0+14, y1-22, x0+15, y1-21, bottomDarkPixels)" // Bottom Left
				19="fill(x1-21, y1-22, x1-20, y1-20, bottomDarkPixels)" // Bottom Right
				20="fill(x1-20, y1-23, x1-19, y1-22, bottomDarkPixels)" // Bottom Right
				
				// Single Pixel Highlight
				21="fill(x0+14, y1-46, x1-20, y1-45, greyHighlight)" // Single Pixel Highlight.
				22="fill(x0+13, y1-45, x0+14, y1-44, greyHighlightFake)" // Anti-Aliased Highlight Left
				23="fill(x1-20, y1-45, x1-19, y1-44, greyHighlightFake)" // Anti-Aliased Highlight Right
	   		 }			
		}	

		// Hides the divider between "PLAY" and "DETAILS"
		GridNavDivider {
			textcolor="none"
			bgcolor="none"
			font-family=basefont
			font-weight=700
			inset="1 1 0 0 "
			// modified font size
			font-size=0	
		}
		
		CUILaunchButton {   
			font-family=headerfont
			font-size=24
			font-weight=400
			textcolor="white"
			
			inset="0 -2 0 0"
		    
		    bgcolor=none
		    padding-left=20
		    padding-top=1
		    
		    font-style="outerglow"
			font-outerglow-color="darkestGrey"
			font-outerglow-offset=1
			font-outerglow-filtersize=3
		    
		    render {
		    	1="image( x0, y0 + 1, x1, y1, graphics/icon_play )"
			}
		}
		
			CUILaunchButton:Hover {   
				textcolor=trueWhite
				
						
		      render {
		       	1="image( x0, y0 + 1, x1, y1, graphics/icon_play_hover )"
		      }
			}
	
		CUIDetailsButton {   
			font-family=headerfont
			font-size=24
			font-weight=400
			textcolor="white"
			
			inset="0 -2 0 0"
		    
		    bgcolor=none
		    padding-left=20
		    padding-top=1
		    
		    font-style="outerglow"
			font-outerglow-color="darkestGrey"
			font-outerglow-offset=1
			font-outerglow-filtersize=3

      
			render {
				1="image( x0, y0, x1, y1, graphics/icon_details )"
			}
		}
		
			CUIDetailsButton:Hover {   
	
				textcolor=trueWhite
	
		      render {
		       	1="image( x0, y0, x1, y1, graphics/icon_details_hover )"
		      }
			}
	

		"GameItem_Updating CUINavButton:hover" {
			textcolor="grey"
		}
	}

	
	layout {
		region { 
			name="actions" 
			align=bottom 
			width=max 
			height=50 
			x=0 y=210 
			margin-bottom=0
		}
		
		place {
			control=chromeborder	
			region=actions			
			x=0 
			y=0 
			width=max 
			height=max
		}

		place {
			control="launch,divider,details"	
			region="actions"		
			align=top-center 
			spacing=7 
			margin-bottom=18 
			margin-left=0 
			margin-top=8
		}
	}
}